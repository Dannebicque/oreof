{% extends 'base.html.twig' %}

{% block content %}
<div class="card">
    <div class="card-body">
        <table class="table">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Email</th>
                <th>Username</th>
                <th>Droits</th>
                <th>Centre</th>
                <th>Date demande</th>
                <th>Valide DPE</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
            <tr>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.centreDemande.libelle }}</td>
                <td>{{ user.dateDemande|dateTimeFr }}</td>
                <td>
                    {% if user.isValidDpe %}
                    <span class="badge bg-success">Oui {% if user.isValidDpe == true %}
                            ({{ user.dateValideDpe|dateTimeFr }})
                        {% endif %}</span>
                    {% else %}
                        <span class="badge bg-warning">Non</span>
                    {% endif %}
                </td>
                <td>
                    <button
                            {{ stimulus_controller('modal', {
                                size: 'lg',
                                modalTitle: 'Voir les détails de l\'utilisateur',
                                modalUrl: path('app_user_show',{'id': user.id}) }) }}
                            data-action="click->modal#openModal"
                            class="btn btn-sm text-info"
                            data-size="lg"
                            data-bs-toggle="tooltip"
                            data-bs-placement="bottom"
                            title="Voir les détails de l\'utilisateur"
                    >
                        <i class="{{ iconShow }}"></i>
                        <span> voir et gérer</span>
                    </button>
                </td>
            </tr>
            {% else %}
                <tr>
                    <td colspan="8">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% endblock %}

{% block header %}
    Demande d'accès en attente
{% endblock %}

{% block breadcrumb %}
