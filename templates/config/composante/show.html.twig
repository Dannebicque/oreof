<table class="table">
    <tbody>
    <tr>
        <th>Libellé</th>
        <td>{{ composante.libelle }}</td>
    </tr>
    <tr>
        <th>Sigle</th>
        <td>{{ composante.sigle }}</td>
    </tr>
    <tr>
        <th>Directeur</th>
        <td>{{ composante.directeur ? composante.directeur.display : 'Non défini' }}</td>
    </tr>
    <tr>
        <th>Responsable DPE</th>
        <td>{{ composante.responsableDpe ? composante.responsableDpe.display : 'Non défini' }}</td>
    </tr>
    <tr>
        <th>Adresse</th>
        <td>{{ composante.adresse ? composante.adresse.display|raw : 'Non définie' }}</td>
    </tr>
    <tr>
        <th>Téléphone standard de la composante</th>
        <td>{{ composante.telStandard|tel_format }}</td>
    </tr>
    <tr>
        <th>Autre téléphone de la composante</th>
        <td>{{ composante.telComplementaire|tel_format }}</td>
    </tr>
    <tr>
        <th>Adresse mail de contact de la composante</th>
        <td>{{ composante.mailContact|mailto }}</td>
    </tr>
    <tr>
        <th>URL du site de la composante</th>
        <td>{{ composante.urlSite|url_open }}</td>
    </tr>
    {% if composante.composanteInformation is defined and composante.composanteInformation is not null %}
        {% if composante.composanteInformation.restauration is not null %}
            <tr>
                <th>Information Restauration</th>
                <td>{{ composante.composanteInformation.restauration }}</td>
            </tr>
        {% endif %}
        {% if composante.composanteInformation.hebergement is not null %}
            <tr>
                <th>Information Hébergement</th>
                <td>{{ composante.composanteInformation.hebergement }}</td>
            </tr>
        {% endif %}
        {% if composante.composanteInformation.transport is not null %}
            <tr>
                <th>Information Transport</th>
                <td>{{ composante.composanteInformation.transport }}</td>
            </tr>
        {% endif %}
    {% endif %}
    </tbody>
</table>

