{% extends 'base.html.twig' %}

{% block header %}
    Vos commentaires
{% endblock %}

{% block breadcrumb %}
    {{ include('communs/_breadcrumb.html.twig', {liens:[
    ]}) }}
{% endblock %}

{% block bouton_header %}

{% endblock %}
{% block content %}
    <h2 class="small-title">Vos commentaires</h2>
    <div class="card">
        <div class="card-title"></div>
        <div class="card-body">
            {% for commentaire in commentaires %}
                <div class="border-bottom border-separator-light mb-2 pb-2">
                    <div class="row g-0">
                        <div class="col">
                            <div class="card-body d-flex flex-row pt-0 pb-0 ps-3 pe-0 h-100 align-items-center justify-content-between">
                                <div class="d-flex flex-column">
                                    <div>
                                        {% if commentaire.formation != null %}
                                            {{ commentaire.formation.displayLong }}
                                        {% elseif commentaire.parcours != null %}
                                            {{ commentaire.parcours.libelle }} / {{ commentaire.parcours.formation.displayLong }}
                                        {% elseif commentaire.ficheMatiere != null %}
                                            {{ commentaire.ficheMatiere.display }}
                                        {% else %}
                                            Erreur
                                        {% endif %}
                                    </div>
                                    <div class="text-small text-muted">{{ commentaire.zone }}</div>
                                    <p>
                                        {{ commentaire.texte|raw }}
                                    </p>
                                </div>
                                <div class="d-flex">
                                    <a class="btn btn-outline-info btn-sm ms-1" type="button"
                                            {% if commentaire.formation != null %}
                                                {% set url = path('app_formation_show', {slug:commentaire.formation.slug})~'#'~commentaire.zone %}
                                            {% elseif commentaire.parcours != null %}
                                                {% set url = path('app_parcours_show', {id:commentaire.parcours.id})~'#'~commentaire.zone %}
                                            {% elseif commentaire.ficheMatiere != null %}
                                                {% set url = path('app_fiche_matiere_show', {slug:commentaire.ficheMatiere.slug})~'#'~commentaire.zone %}
                                            {% else %}
                                                {% set url = '' %}
                                            {% endif %}
                                       href="{{ url }}"
                                       target="_blank"
                                    >Acc√©der</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
