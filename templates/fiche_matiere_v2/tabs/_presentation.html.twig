<turbo-frame id="tab-content">
    {{ include('fiche_matiere_v2/tabs/_header.html.twig', {tabKey: 'presentation'}) }}

    <div class="flex-1 overflow-y-auto mt-4 custom-scrollbar">
        {% form_theme form 'communs/form_theme_v2.html.twig' %}
        {{ form_start(form, {
            attr: {
                id: 'tab_form_presentation',
                'data-controller': 'autosave',
                'data-autosave-url-value': path('fiche_matiere_v2_tab_autosave', { id: fiche_matiere.id, tabKey: 'presentation' }),
                'data-action': 'change->autosave#queue'
            }
        }) }}

        {{ form_errors(form) }}
        {{ form_widget(form) }}

        {{ form_end(form) }}
    </div>
</turbo-frame>
