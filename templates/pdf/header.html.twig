<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <style>

        #class_logo {
            float: left;
            width: 20%;
        }

        #class_logo img {
            height: 1cm;
        }

        #class_titre {
            float: right;
            width: 80%;
        }

        {% if withTemplate is defined and withTemplate == true %}
        header {
            /*-webkit-print-color-adjust: exact;*/
            margin: 0;
            top: 0;
            width: 100%;
            height: 3.5cm;
            left: 0;
            right: 0;
            padding: 0.2cm;
            color: white;
            text-align: right;
            font-size: 10px;
        }

        #class_vague {
            margin: 0;
            padding: 0;
            position: fixed;
            right: -0.5cm;
            text-align: right;

        }

        #class_vague img {
            height: 100%;
            width: 21cm;
        }


        {% else %}

        header {
            margin: 0;
            bottom: 0;
            width: 100%;
            left: 0;
            padding: 0.2cm;
            background-color: #03a9f4;
            color: white;
            text-align: center;
            font-size: 10px;
        }

        {% endif %}
    </style>
</head>
<body>
<header>
    {% if withTemplate is defined and withTemplate == true %}
        <div id="class_vague">
            <img src="data:image/jpeg;base64,{{ image }}" alt="logo">
        </div>
    {% else %}
        <div id="class_logo">
            <img src="data:image/jpeg;base64,{{ image }}" alt="logo">
        </div>
        <div id="class_titre">
            <h1>{{ titre|raw }}</h1>
        </div>
    {% endif %}
</header>
</body>
</html>
