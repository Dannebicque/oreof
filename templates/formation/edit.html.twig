{% extends 'base.html.twig' %}

{% block content %}
    {% set step = 1 %}
    {{ include('formation/_synthese_formation.html.twig') }}
    <div class="mt-3"
            {{ stimulus_controller('formation_wizard', {
                url: path('app_formation_wizard'),
                urlParcours: path('app_parcours_wizard'),
                step: selectedStep,
                formation: formation.id,
            }) }}
    >

        <ul class="nav nav-tabs nav-tabs-title nav-tabs-line-title responsive-tabs" id="lineTitleTabsContainer" role="tablist">
            <li class="nav-item" role="presentation">
                <a class="nav-link {% if selectedStep == 1 %}active{% endif %}"
                   data-bs-toggle="tab" href="#" role="tab" {% if step == 1 %}aria-selected="true"{% endif %}
                        {{ stimulus_action('formation_wizard', 'changeStep', 'click', {step: 1}) }}
                >
                    Localisation de la formation {{ formation.onglets|etatRemplissage(1, 'formation') }}
                </a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link {% if selectedStep == 2 %}active{% endif %}" data-bs-toggle="tab" href="#" role="tab"
                        {{ stimulus_action('formation_wizard', 'changeStep', 'click', {step: 2}) }}
                   aria-selected="false">Présentation de la
                                         formation {{ formation.onglets|etatRemplissage(2, 'formation') }}</a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link {% if selectedStep == 3 %}active{% endif %}" data-bs-toggle="tab" href="#"
                   role="tab" aria-selected="false"
                        {{ stimulus_action('formation_wizard', 'changeStep', 'click', {step: 3}) }}
                >Structure et organistion de la formation {{ formation.onglets|etatRemplissage(3, 'formation') }}</a>
            </li>
            {% if formation.parcours[0] is defined and formation.parcours[0].isParcoursDefaut %}
                {% set parcours = formation.parcours[0] %}
                <li class="nav-item" role="presentation">
                    <a class="nav-link"
                       data-bs-toggle="tab" href="#" role="tab"
                            {{ stimulus_action('formation_wizard', 'changeStepParcours', 'click', {step: 2,
                                parcours:parcours.id}) }}
                    >
                        Descriptif {{ parcours.onglets|etatRemplissage(2, 'parcours') }}
                    </a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" data-bs-toggle="tab" href="#" role="tab" aria-selected="false"
                            {{ stimulus_action('formation_wizard', 'changeStepParcours', 'click', {step: 3,parcours:parcours.id}) }}
                    >
                        Compétences {{ parcours.onglets|etatRemplissage(3, 'parcours') }}
                    </a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" data-bs-toggle="tab" href="#" role="tab" aria-selected="false"
                            {{ stimulus_action('formation_wizard', 'changeStepParcours', 'click', {step: 4,parcours:parcours.id}) }}
                    >
                        Structure de la maquette {{ parcours.onglets|etatRemplissage(4, 'parcours') }}
                    </a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" data-bs-toggle="tab" href="#" role="tab" aria-selected="false"
                            {{ stimulus_action('formation_wizard', 'changeStepParcours', 'click', {step: 5,parcours:parcours.id}) }}
                    >
                        Admission & inscription {{ parcours.onglets|etatRemplissage(5, 'parcours') }}
                    </a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" data-bs-toggle="tab" href="#" role="tab" aria-selected="false"
                            {{ stimulus_action('formation_wizard', 'changeStepParcours', 'click', {step: 7,parcours:parcours.id}) }}
                    >
                        Et après... {{ parcours.onglets|etatRemplissage(7, 'parcours') }}
                    </a>
                </li>
            {% endif %}

            <!-- An empty list to put overflowed links -->
            <li class="nav-item dropdown ms-auto pe-0 d-none responsive-tab-dropdown">
                <a
                        class="btn btn-icon btn-icon-only btn-background pt-0 bg-transparent pe-0"
                        href="#"
                        data-bs-toggle="dropdown"
                        aria-haspopup="true"
                        aria-expanded="false"
                >
                    <i data-acorn-icon="more-horizontal"></i>
                </a>
                <ul class="dropdown-menu mt-2 dropdown-menu-end"></ul>
            </li>
        </ul>

        <div class="card mb-5">
            <div class="card-body">
                <div class="tab-content">
                    <div class="tab-pane fade active show" id="step_1" role="tabpanel" {{ stimulus_target
                        ('formation_wizard', 'content') }}>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block header %}
    <strong>{{ typeDiplome.libelle }} {{ formation.display }}</strong>
{% endblock %}

{% block breadcrumb %}
    {{ include('communs/_breadcrumb.html.twig', {liens:[
        {href: path('app_formation_index'), title: 'Liste des formations'},
    ]}) }}
{% endblock %}

{% block bouton_header %}
    <a href="{{ path('app_formation_index') }}"
       class="btn btn-sm btn-outline-success btn-icon btn-icon-end w-100 w-sm-auto mx-2"
       data-bs-toggle="tooltip"
       data-bs-placement="bottom"
       title="Retour à la liste des formations"
    >
        <i class="{{ iconBack }}"></i>
        <span> Retour à la liste des formations</span>
    </a>
{% endblock %}
