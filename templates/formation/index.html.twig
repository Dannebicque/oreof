{% extends 'base.html.twig' %}

{% block content %}
    <div class="card"
            {{ stimulus_controller('crud', {
                url: path('app_formation_liste')
            }) }}
         data-action="base:refreshListe@window->crud#refreshListe"
    >
        <div class="card-body">
            {{ include('communs/_recherche.html.twig') }}
            <div {{ stimulus_target('crud', 'liste') }}>

            </div>
        </div>
    </div>
{% endblock %}

{% block header %}
    Détails des mentions/spécialités
{% endblock %}

{% block breadcrumb %}
    {{ include('communs/_breadcrumb.html.twig', {liens:[
    ]}) }}
{% endblock %}

{% block bouton_header %}
    {% if is_granted('ROLE_SES') %}
        <a href="{{ path('app_formation_etat_send_ouverture') }}"
           class="btn btn-sm btn-outline-warning btn-icon btn-icon-end w-100 w-sm-auto mx-2"
           data-bs-toggle="tooltip"
           data-bs-placement="bottom"
           title="Ouvrir les formations"
        >
            <i class="{{ iconAdd }}"></i>
            <span> Ouvrir les formations</span>
        </a>
        <a href="{{ path('app_formation_new') }}"
           class="btn btn-sm btn-outline-success btn-icon btn-icon-end w-100 w-sm-auto mx-2"
           data-bs-toggle="tooltip"
           data-bs-placement="bottom"
           title="Ajouter une formation"
        >
            <i class="{{ iconAdd }}"></i>
            <span> Ajouter une formation</span>
        </a>
    {% else %}
        <button
                {{ stimulus_controller('modal', {
                    size: 'lg',
                    modalTitle: 'Demander l\'ajout d\'une mention',
                    modalUrl: path('app_formation_demande_new') }) }}
                data-action="click->modal#openModal"
                class="btn btn-sm btn-outline-success btn-icon btn-icon-end w-100 w-sm-auto mx-2"
                data-size="lg"
                data-bs-toggle="tooltip"
                data-bs-placement="bottom"
                title="Demander l'ajout d'une mention"
        >
            <i class="{{ iconAdd }}"></i>
            <span> Demander l'ajout d'une mention</span>
        </button>
    {% endif %}

{% endblock %}
