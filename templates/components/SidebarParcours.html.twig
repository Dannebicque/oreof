{# templates/components/SidebarParcours.html.twig #}
<div {{ attributes }} class="p-6">
    <div class="space-y-4">
        {% for annee in parcours.annees %}
            <div class="flex items-center justify-between">
                <span class="text-white text-sm font-bold">Année {{ annee.ordre }}</span>
                {# Indicateur de validité calculé côté serveur #}
                <div class="w-3 h-3 rounded-full {{ annee.isValid ? 'bg-green-500 shadow-[0_0_10px_#22c55e]' : 'bg-red-500' }}"></div>
            </div>
        {% endfor %}
    </div>
</div>
