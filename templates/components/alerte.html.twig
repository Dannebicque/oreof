{% set color_classes = {
  'success': {'bg':'bg-green-50','border':'border-green-200','text':'text-green-800','icon_bg':'bg-green-600'},
  'danger':  {'bg':'bg-red-50','border':'border-red-200','text':'text-red-800','icon_bg':'bg-red-600'},
  'info':    {'bg':'bg-blue-50','border':'border-blue-200','text':'text-blue-800','icon_bg':'bg-blue-600'},
  'warning': {'bg':'bg-amber-50','border':'border-amber-200','text':'text-amber-800','icon_bg':'bg-amber-500'}
} %}
{% set c = color_classes[this.type]|default(color_classes['info']) %}

<div class="{{ c.bg }} {{ c.border }} border-l-4 p-4 rounded-md flex items-start gap-3 mt-2 mb-2" role="alert">
  <div class="{{ c.icon_bg }} text-white rounded-full p-2 flex items-center justify-center shrink-0 h-12 w-12">
    <span class="fas {{ this.icone }} text-lg"></span>
  </div>

  <div class="flex-1 text-sm {{ c.text }}">
    {% block content %}{% endblock %}
    <div class="mt-1">{{ this.message|raw }}</div>
  </div>
</div>
