<div class="row">
    <div class="col-12 mb-2">
        <section class="scroll-section" id="labels">
            <h2 class="small-title">Ues</h2>
            <div class="card mb-2 bg-transparent no-shadow d-none d-md-block sh-3">
                <div class="card-body pt-0 pb-0 h-100">
                    <div class="row g-0 h-100 align-content-center">
                        <div class="col-12 col-md-1 d-flex align-items-center mb-2 text-secondary mb-md-0 text-small">
                            UE
                        </div>
                        <div class="col-12 col-md-2 d-flex align-items-center mb-2 text-secondary mb-md-0 text-small">
                            Type UE
                        </div>
                        <div class="col-12 col-md-2 d-flex align-items-center mb-2 text-secondary mb-md-0 text-small">
                            Nature UE
                        </div>
                        <div class="col-6 col-md-1 d-flex align-items-center
                        justify-content-end text-secondary text-small">
                            ECTS
                        </div>
                        <div class="col-6 col-md-1 d-flex align-items-center
                        justify-content-end text-secondary text-small">
                            Nb. EC
                        </div>
                        <div class="col-6 col-md-1 d-flex align-items-center
                        justify-content-end text-secondary text-small">
                            DÃ©tails
                        </div>
                        <div class="col-6 col-md-3 d-flex align-items-center
                        justify-content-end text-secondary text-small">
                            Actions
                        </div>
                    </div>
                </div>
            </div>
            <div>{# class="scroll-out" #}
                {% for ue in ues %}
                    <div {{ stimulus_controller('structure--ue', {
                        ue:ue.id,
                        parcours:parcours.id,
                        url: path('api_ects_ue', {ue: ue.id, parcours: parcours.id}),
                    }) }}>
                        <div class="card mb-2 sh-19 sh-md-8">
                            <div class="card-body pt-0 pb-0 h-100 {% if ue.subOrdre != null and ue.subOrdre != 0 %}border-left-sousUe border-left-sousUe-{{ ue.ordre }}{% endif %}">
                                <div class="row g-0 h-100 align-content-center">
                                    <div class="col-12 col-md-1 d-flex flex-column justify-content-center mb-1 mb-md-0">
                                        <div class="text-muted text-small d-md-none">ue</div>
                                        {{ ue.display }}
                                    </div>
                                    <div class="col-12 col-md-2 d-flex flex-column justify-content-center mb-1 mb-md-0">
                                        <div class="text-muted text-small d-md-none">ue</div>
                                        {% if is_granted('ROLE_FORMATION_EDIT_MY', parcours.formation) %}
                                            <label for="detail_ue_{{ ue.id }}" class="sr-only">Type Ue</label>
                                            <select class="form-select form-select-sm" id="detail_ue_{{ ue.id }}"
                                                    {{ stimulus_action('structure--ue', 'changeTypeUe', 'change', {
                                                        url: path('structure_ue_change_type_ue', {ue: ue.id})
                                                    }) }}
                                            >
                                                <option value="">Choisir un type</option>
                                                {% for typeUe in typeUes %}
                                                    <option value="{{ typeUe.id }}"
                                                            {% if ue.typeUe != null and ue.typeUe.id == typeUe.id %}
                                                                selected
                                                            {% endif %}
                                                    >
                                                        {{ typeUe.libelle }}
                                                    </option>
                                                {% endfor %}
                                            </select>
                                        {% else %}
                                            {{ ue.typeUe != null ? ue.typeUe.libelle : 'erreur' }}
                                        {% endif %}
                                    </div>
                                    <div class="col-12 col-md-2 d-flex flex-column justify-content-center mb-1
                                    mb-md-0">
                                        <div class="text-muted text-small d-md-none">ue</div>
                                        {% if is_granted('ROLE_FORMATION_EDIT_MY', parcours.formation) %}
                                            <label for="detail_nature_ue_{{ ue.id }}" class="sr-only">
                                                Nature UE
                                            </label>
                                            <select class="form-select form-select-sm ms-2"
                                                    id="detail_nature_ue_{{ ue.id }}"
                                                    {{ stimulus_action('structure--ue', 'changeNatureUe',
                                                        'change', {
                                                            url: path('structure_ue_change_nature_ue', {ue: ue.id})
                                                        }) }}
                                            >
                                                <option value="">Choisir</option>
                                                {% for natureUeEc in natureUeEcs %}
                                                    <option value="{{ natureUeEc.id }}"
                                                            data-choix="{{ natureUeEc.choix == true ? 'true' : 'false' }}"
                                                            {% if ue.natureUeEc != null and ue.natureUeEc.id ==
                                                                natureUeEc.id %}
                                                                selected
                                                            {% endif %}
                                                    >
                                                        {{ natureUeEc.libelle }}
                                                    </option>
                                                {% endfor %}
                                            </select>
                                        {% else %}
                                            {{ ue.natureUeEc != null ? ue.natureUeEc.libelle : 'erreur' }}
                                        {% endif %}
                                    </div>
                                    <div class="col-6 col-md-1 d-flex flex-column justify-content-center
                                    align-items-md-end mb-1 mb-md-0">
                                        <div class="text-muted text-small d-md-none">ECTS</div>
                                        <span id="ects_ue_{{ ue.id }}_{{ parcours.id }}">
                                        {{ ue.totalEctsUe|badgeEctsUe(typeDiplome.nbEctsMaxUe) }}
                                            </span>
                                    </div>

                                    <div class="col-6 col-md-1 d-flex flex-column justify-content-center mb-1 mb-md-0
                                     ms-2">
                                        <div class="text-muted text-small d-md-none">NB. EC</div>
                                        {{ ue.nbElementConstitutifs|badgeNb }}
                                    </div>

                                    <div class="col-6 col-md-1 d-flex flex-column justify-content-center
                                            align-items-md-end mb-1 mb-md-0">
                                        <div class="text-muted text-small d-md-none">Voir les EC</div>

                                        <button class="btn btn-sm btn-outline-primary"
                                                {{ stimulus_action('structure--ue', 'detail', 'click',
                                                    {ue:ue.id, parcours: parcours.id, url: path
                                                        ('structure_ec_detail_ue', {ue:ue.id, parcours: parcours.id})}
                                                ) }}
                                        >
                                            <i class="fal fa-caret-right"></i> Voir les EC
                                        </button>

                                    </div>
                                    <div class="col-6 col-md-3 d-flex justify-content-center text-end
                                            align-items-md-end mb-1 mb-md-0">
                                        <div class="text-muted text-small d-md-none">Actions</div>
                                        {% if typeDiplome.nbUeMax != 0 or ue.ordre > typeDiplome.nbUeMax %}
                                            <button {{ stimulus_action('structure--ue', 'delete', 'click', {
                                                url:path('structure_ue_delete',{'id': ue.id}),
                                                csrf: csrf_token('delete' ~ ue.id)
                                            }) }} class="btn btn-sm text-danger">
                                                <i class="{{ iconDelete }}"></i> Supprimer
                                            </button>
                                        {% endif %}
                                        {% if (is_granted('ROLE_FORMATION_EDIT_MY', parcours.formation)) %} {#  and
                                        (workflow_can(ec,
                                            'valider_parcours') or workflow_can(ec,
                                            'initialiser'))) or (is_granted
                                            ('ROLE_EC_EDIT_MY', ec)) and  workflow_can(ec,
                                            'valider_ec')) #}
                                            {% if ue.subOrdre == 0 %}
                                                {% if not loop.first %}
                                                    <button class="btn btn-sm btn-outline-info" {{ stimulus_action
                                                        ('structure--ue', 'deplacerUe',
                                                        'click', {url: path('structure_ue_deplacer',{sens: 'up', ue:ue
                                                        .id}), ue:ue.id, parcours:parcours.id}) }}>
                                                        <i class="fal fa-circle-up"></i></button>
                                                {% else %}
                                                    <button class="btn btn-sm btn-outline-info" disabled>
                                                        <i class="fal fa-circle-up"></i>
                                                    </button>
                                                {% endif %}
                                                {% if not loop.last %}
                                                    <button class="btn btn-sm btn-outline-info" {{ stimulus_action('structure--ue', 'deplacerUe',
                                                        'click', {url: path('structure_ue_deplacer',{sens: 'down', ue:ue.id}), ue:ue.id, parcours:parcours.id}) }}>
                                                        <i class="fal
                                        fa-circle-down"></i></button>
                                                {% else %}
                                                    <button class="btn btn-sm btn-outline-info" disabled>
                                                        <i class="fal fa-circle-down"></i>
                                                    </button>
                                                {% endif %}
                                            {% else %}
                                                {% if not ue.subOrdre == 1 %}
                                                    <button class="btn btn-sm btn-outline-info" {{ stimulus_action
                                                        ('structure--ue', 'deplacerUe',
                                                        'click', {url: path('structure_ue_deplacer_sub',{sens: 'up',
                                                            ue:ue
                                                        .id}), ue:ue.id, parcours:parcours.id}) }}>
                                                        <i class="fal fa-circle-up"></i></button>
                                                {% else %}
                                                    <button class="btn btn-sm btn-outline-info" disabled>
                                                        <i class="fal fa-circle-up"></i>
                                                    </button>
                                                {% endif %}
                                                {% if not loop.last %}
                                                    <button class="btn btn-sm btn-outline-info" {{ stimulus_action('structure--ue', 'deplacerUe',
                                                        'click', {url: path('structure_ue_deplacer_sub',{sens: 'down', ue:ue.id}), ue:ue.id, parcours:parcours.id}) }}>
                                                        <i class="fal
                                        fa-circle-down"></i></button>
                                                {% else %}
                                                    <button class="btn btn-sm btn-outline-info" disabled>
                                                        <i class="fal fa-circle-down"></i>
                                                    </button>
                                                {% endif %}
                                            {% endif %}

                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="detail_ue_{{ ue.id }}_{{ parcours.id }}" class="d-none detail_ue ms-4">
                            <div class="row">
                                <div class="col-12" {{ stimulus_target('structure--ue', 'detail') }}
                                     data-action="base:refreshListeEc@window->structure--ue#refreshListeEc
                                     ec--liste:refreshListeEc@window->structure--ue#refreshListeEc
                                        ec--manage:modalHide@window->structure--ue#refreshListeEc
                                        "
                                     data-structure--ue-url-param="{{ path('structure_ec_detail_ue', {ue:ue.id,
                                         parcours: parcours.id}) }}"
                                     data-structure--ue-ue-param="{{ ue.id }}"
                                     data-structure--ue-parcours-param="{{ parcours.id }}"

                                ></div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
                <div class="card mb-2 sh-19 sh-md-8">
                    <button
                            {{ stimulus_controller('modal', {
                                size: 'lg',
                                modalTitle: 'Ajouter une UE au semestre ' ~ semestre.ordre,
                                modalUrl: path('structure_ue_add_ue_semestre', {parcours:parcours.id, semestre:semestre.id})
                            }) }}
                            data-action="click->modal#openModal"
                            class="btn btn-sm btn-outline-success btn-icon btn-icon-end w-100 w-sm-auto mx-2 mt-4"
                            data-size="lg"
                            data-bs-toggle="tooltip"
                            data-bs-placement="bottom"
                            title="Ajouter une UE"
                    >
                        <i class="{{ iconAdd }}"></i>
                        <span> Ajouter une UE</span>
                    </button>
                </div>
            </div>
        </section>
    </div>
</div>
