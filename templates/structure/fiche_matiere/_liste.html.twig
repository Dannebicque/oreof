                    url:path('app_fiche_matiere_delete',{'id': ficheMatiere.id})
                }) }} class="btn btn-sm text-danger">
                    <i class="{{ iconDelete }}"></i> Supprimer
                </button>
                {#                    {% endif %} #}
            </td>
