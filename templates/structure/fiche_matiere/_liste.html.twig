<div>
    <table class="table table-striped {% if mode == 'detail' %}table-bordered table-condensed{% endif %} table-hover ">
        <thead>
        <tr>
            {% if mode == 'liste' %}
                <th>Mention/spécialité/Parcours</th>
                <th>UE</th>
            {% endif %}
            <th>Libellé</th>
            <th>Référent</th>
            <th>Remplissage</th>
            <th>Etat</th>
