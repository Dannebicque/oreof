                        href="{{ path('app_fiche_matiere_show',{'id': ficheMatiere.id}) }}"
                        class="btn btn-sm text-info"
                        data-bs-toggle="tooltip"
                        data-bs-placement="bottom"
                        title="Voir une fiche EC/matière"
                        target="_blank"
                >
                    <i class="{{ iconShow }}"></i>
                    <span> voir</span>
                </a>
                {#                    {% endif %} #}


