{% extends 'base.html.twig' %}

{% block header %}Bienvenue sur ORÃ©OF!{% endblock %}

{% block content %}
    {{ include('default/_timeLine.html.twig') }}

    {{ component('actualites') }}

    <h2 class="small-title mt-3">Vos formations</h2>
    <div class="row gy-2">
        <div class="col-12 p-0">
            <div class="card"
                    {{ stimulus_controller('crud', {
                        url: path('app_formation_liste')
                    }) }}
                 data-action="base:refreshListe@window->crud#refreshListe"
            >
                <div class="card-body">
                    {{ include('communs/_recherche.html.twig') }}
                    <div {{ stimulus_target('crud', 'liste') }}>

                    </div>
                </div>
            </div>
        </div>
    </div>

    {% if is_granted('CAN_ETABLISSEMENT_CONSEILLER_ALL') %}
        <h2 class="small-title mt-3">Vos formations en tant que conseiller CFVU</h2>
        <div class="row gy-2">
            <div class="col-12 p-0">
                <div class="card"
                        {{ stimulus_controller('crud', {
                            url: path('app_formation_liste_cfvu')
                        }) }}
                     data-action="base:refreshListe@window->crud#refreshListe"
                >
                    <div class="card-body">
                        {{ include('communs/_recherche.html.twig') }}
                        <div {{ stimulus_target('crud', 'liste') }}>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

{% endblock %}
