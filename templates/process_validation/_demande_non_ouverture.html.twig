{{ component('alerte', {
    type: 'info',
    message: ('demande.non.ouverture.alerte')|trans({}, 'process')|nl2br|raw
}) }}

<form action="{{ path('app_validation_demande_non_ouverture', {parcours:parcours.id}) }}" method="post"
      enctype="multipart/form-data">
    <p>
        <strong>{{ ('demande.non.ouverture.label')|trans({}, 'process') }}</strong>
        <i
                class="fal fa-question-circle ms-1"
                data-controller="tooltip"
                data-tooltip-placement-value="bottom"
                aria-label="{{ ('demande.non.ouverture.help')|trans({}, 'process') }}"
                data-bs-original-title="{{ ('demande.non.ouverture.help')|trans({}, 'process') }}"></i>
    </p>

    <div class="form-check mt-2">
        <input class="form-check-input" type="radio"
               required value="NON_OUVERTURE"
               id="modificationMCCCTexte"
               name="demandeNonOuverture">
        <label class="form-check-label" for="modificationMCCCTexte">
            <strong>{{ ('demande.non.ouverture.confirmation.label')|trans({'%parcours%': parcours.libelle}, 'process') }}</strong>
            <i
                    class="fal fa-question-circle ms-1"
                    data-controller="tooltip"
                    data-tooltip-placement-value="bottom"
                    aria-label="{{ ('demande.non.ouverture.confirmation.help')|trans({}, 'process') }}"
                    data-bs-original-title="{{ ('demande.non.ouverture.confirmation.help')|trans({}, 'process') }}"></i>
        </label>
    </div>

    <div>
        <label for="argumentaire_demande_non_ouverture"
               class="form-label"> {{ ('demande.non.ouverture.argumentaire.label')|trans({}, 'process') }}
            <span class="required"></span>
            <i class="fal fa-question-circle ms-1"
               data-controller="tooltip"
               data-tooltip-placement-value="bottom"
               aria-label="{{ ('demande.non.ouverture.argumentaire.help')|trans({}, 'process') }}"
               data-bs-original-title="{{ ('demande.non.ouverture.argumentaire.help')|trans({}, 'process') }}"></i>
        </label>
        <textarea name="argumentaire_demande_non_ouverture"
                  class="form-control"
                  required id="argumentaire_demande_non_ouverture"
                  rows="5"
        ></textarea>
    </div>


    <div class="mt-2">
        <button type="submit" class="btn btn-success"
                {{ stimulus_action('base','sauvegardeFormModal', 'click') }}
        >
            <i class="fal fa-floppy-disk"></i>
            {{ ('btn.demande.non.ouverture')|trans({}, 'process') }}
        </button>
    </div>
</form>
