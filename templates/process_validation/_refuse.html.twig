{{ component('alerte', {
    type: 'warning',
    message: (process.label~'.refuse.'~place)|trans({}, 'process')
}) }}


<form action="{{ path('app_validation_refuse', {etape:etape, type:type, id:id}) }}" method="post">

    {% if process.hasDate %}
    <div>
        <label for="date" class="form-label">{{ ('refuse.'~process.label~'.date.label')|trans({}, 'process') }} <span class="required"></span>
            <i class="fal fa-question-circle ms-1"
                data-controller="tooltip"
                data-tooltip-placement-value="bottom"
                aria-label="{{ ('refuse.'~process.label~'.helps.date.help')|trans({}, 'process') }}"
                data-bs-original-title="{{ ('refuse.'~process.label~'.helps.date.help')|trans({}, 'process') }}">
            </i>
        </label>
        <input type="date" name="date"
               class="form-control"
               required
               id="date"
               value="{{ 'now'|date('Y-m-d') }}"> {# ou date déjà saisie si édition? #}
    </div>
{% endif %}

<div>
    <label for="argumentaire" class="form-label">{{ ('refuse.'~process.label~'.argumentaire.label')|trans({}, 'process') }} <span class="required"></span>
        <i class="fal fa-question-circle ms-1"
           data-controller="tooltip"
           data-tooltip-placement-value="bottom"
           aria-label="{{ ('refuse.'~process.label~'.helps.argumentaire.help')|trans({}, 'process') }}"
           data-bs-original-title="{{ ('refuse.'~process.label~'.helps.argumentaire.help')|trans({}, 'process') }}"></i>
    </label>
    <textarea name="argumentaire"
              class="form-control"
              required
              id="argumentaire"
              rows="5"
    > </textarea>
</div>

    {% if process.hasRefuse is iterable %}
        {% for cas in process.hasRefuse %}
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="{{ cas }}">
                <label class="form-check-label" for="{{ cas }}">
                    {{ ('reserve.'~process.label~'.helps.'~cas~'.'~place~'.label')|trans({}, 'process')}} <i
                            class="fal fa-question-circle ms-1"
                            data-controller="tooltip"
                            data-tooltip-placement-value="bottom"
                            aria-label="{{ ('refuse.'~process.label~'.helps.'~cas~'.'~place~'.help')|trans({}, 'process') }}"
                            data-bs-original-title="{{ ('refuse.'~process.label~'.helps.'~cas~'.'~place~'.help')|trans({}, 'process') }}"></i>
                </label>
            </div>
        {% endfor %}
    {% endif %}

<div class="mt-2">
    <button type="submit" class="btn btn-success"
            {{ stimulus_action('base','sauvegardeFormModal', 'click') }}
            data-action="live#emit"
            data-event="refuse"
    >
        <i class="fal fa-floppy-disk"></i>
        {{ ('btn.'~process.label~'.refuse.'~place)|trans({}, 'process') }}
    </button>
</div>
</form>
