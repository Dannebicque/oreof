{{ component('alerte', {
    type: 'info',
    message: ('demande.reouverture.annuler.alerte')|trans({}, 'process')|nl2br|raw
}) }}

<form action="{{ path('app_validation_demande_reouverture_cloture', {type:type, id:id}) }}" method="post"
      enctype="multipart/form-data">

    {% if hasDifferences %}
        Des différences existent entre la version actuelle et la version précédente.
    {% else %}
        Aucune différence n'a été détectée entre la version actuelle et la version précédente.
    {% endif %}

    <div class="mt-2">
        <button type="submit" class="btn btn-success"
                {{ stimulus_action('base','sauvegardeFormModal', 'click') }}
        >
            <i class="fal fa-floppy-disk"></i>
            {% if type_modif == 'MODIFICATION_TEXTE' %}
                {{ ('btn.demande.reouverture.cloture.sans_cfvu.ses')|trans({}, 'process') }}
            {% else %}
                {{ ('btn.demande.reouverture.cloture.ses')|trans({}, 'process') }}
            {% endif %}
        </button>
    </div>
</form>
