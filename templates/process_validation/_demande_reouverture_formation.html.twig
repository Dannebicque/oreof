{{ component('alerte', {
    type: 'info',
    message: ('demande.reouverture.alerte')|trans({}, 'process')|nl2br|raw
}) }}

<form action="{{ path('app_validation_demande_reouverture_mention', {formation:formation.id}) }}" method="post"
      enctype="multipart/form-data">
    <p>
        <strong>{{ ('demande.reouverture.mention.label')|trans({}, 'process') }}</strong>
        <i
                class="fal fa-question-circle ms-1"
                data-controller="tooltip"
                data-tooltip-placement-value="bottom"
                aria-label="{{ ('demande.reouverture.mention.help')|trans({}, 'process') }}"
                data-bs-original-title="{{ ('demande.reouverture.mention.help')|trans({}, 'process') }}"></i>
    </p>
    <div class="form-check mt-2">
        <input class="form-check-input" type="radio" value="MODIFICATION_TEXTE" id="modificationTexte"
               name="demandeReouverture">
        <label class="form-check-label" for="modificationTexte">
            <strong>{{ ('demande.reouverture.mention.modification.texte.label')|trans({}, 'process') }}</strong>
            <i
                    class="fal fa-question-circle ms-1"
                    data-controller="tooltip"
                    data-tooltip-placement-value="bottom"
                    aria-label="{{ ('demande.reouverture.modification.texte.help')|trans({}, 'process') }}"
                    data-bs-original-title="{{ ('demande.reouverture.modification.texte.help')|trans({}, 'process') }}"></i>
        </label>
    </div>
    <div class="form-check mt-2">
        <input class="form-check-input" type="radio" value="MODIFICATION_PARCOURS"
               id="modificationMCCCTexte"
               name="demandeReouverture">
        <label class="form-check-label" for="modificationMCCCTexte">
            <strong>{{ ('demande.reouverture.mention.modification.mccc.texte.label')|trans({}, 'process') }}</strong>
            <i
                    class="fal fa-question-circle ms-1"
                    data-controller="tooltip"
                    data-tooltip-placement-value="bottom"
                    aria-label="{{ ('demande.reouverture.mention.modification.mccc.texte.help')|trans({}, 'process') }}"
                    data-bs-original-title="{{ ('demande.reouverture.modification.mccc.texte.help')|trans({}, 'process') }}"></i>
        </label>
    </div>

    <twig:alerte type="warning" message="Une ouverture avec CFVU implique que la publication des modifications sur les textes se fera Ã  l'issue de la CFVU." />


    <div>
        <label for="argumentaire_demande_reouverture"
               class="form-label"> {{ ('demande.reouverture.modification.argumentaire.label')|trans({}, 'process') }}
            <span class="required"></span>
            <i class="fal fa-question-circle ms-1"
               data-controller="tooltip"
               data-tooltip-placement-value="bottom"
               aria-label="{{ ('demande.reouverture.modification.argumentaire.help')|trans({}, 'process') }}"
               data-bs-original-title="{{ ('demande.reouverture.modification.argumentaire.help')|trans({}, 'process') }}"></i>
        </label>
        <textarea name="argumentaire_demande_reouverture"
                  class="form-control"
                  required
                  id="argumentaire_demande_reouverture"
                  rows="5"
        > </textarea>
    </div>


    <div class="mt-2">
        <button type="submit" class="btn btn-success"
                {{ stimulus_action('base','sauvegardeFormModal', 'click') }}
                {#                data-action="live#emit"#}
                {#                data-event="valide"#}
        >
            <i class="fal fa-floppy-disk"></i>
            {{ ('btn.demande.reouverture.modification')|trans({}, 'process') }}
        </button>
    </div>
</form>
