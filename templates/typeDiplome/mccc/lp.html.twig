<h3>1ère Session</h3>
<div>
    <div class="row mb-2">
        <div class="col-4">
            <strong>Contrôle Continu</strong>
        </div>
        <div class="col-4">
            <label for="pourcentage_s1_cc">Pourcentage</label>
            <div class="input-group">
                <input type="text" class="form-control" id="pourcentage_s1_cc" name="pourcentage_s1_cc"
                        {% if wizard == true %}{{ stimulus_action('ec--step5', 'saveData', 'change', {
                            action: 'float',
                            field: 'pourcentage_s1_cc',
                        }) }}{% endif %}
                       value="{{ mcccs[1]['cc'].pourcentage }}"
                >
                <span class="input-group-text">%</span>
            </div>
        </div>
        <div class="col-4">
            <label for="nbepreuve_s1_cc">Nb d'épreuve(s)</label>
            <input type="number" id="nbepreuve_s1_cc" name="nbepreuve_s1_cc" class="form-control"
                    {% if wizard == true %}{{ stimulus_action('ec--step5', 'saveData', 'change', {
                        action: 'integer',
                        field: 'nbepreuve_s1_cc',
                    }) }}{% endif %}
                   value="{{ mcccs[1]['cc'].nbEpreuves }}"
            >
        </div>
    </div>
    <div class="row">
        <div class="col-4">
            <strong>Examen terminal</strong>
        </div>
        <div class="col-4">
            <label for="pourcentage_s1_et">Pourcentage</label>
            <div class="input-group">
                <input type="text" class="form-control" id="pourcentage_s1_et" name="pourcentage_s1_et"
                        {% if wizard == true %}{{ stimulus_action('ec--step5', 'saveData', 'change', {
                            action: 'float',
                            field: 'pourcentage_s1_et',
                        }) }}{% endif %}
                       value="{{ mcccs[1]['et'].pourcentage }}"
                >
                <span class="input-group-text">%</span>
            </div>
        </div>
        <div class="col-4">
            <label for="typeEpreuve_s1_et">Type d'épreuve</label>
            <select type="text" class="form-select" id="typeEpreuve_s1_et" name="typeEpreuve_s1_et"
                    {% if wizard == true %}{{ stimulus_action('ec--step5', 'saveData', 'change', {
                        action: 'typeEpreuve',
                        field: 'typeEpreuve_s1_et',
                    }) }}{% endif %}
            >
                <option value="">Choisir</option>
                {% for typeE in typeEpreuves %}
                    <option value="{{ typeE.id }}"
                            {% if mcccs[1]['et'].typeEpreuve[0] is defined and mcccs[1]['et'].typeEpreuve[0] == typeE.id
                            %}selected{% endif %}
                    >{{ typeE.libelle }}</option>
                {% endfor %}
            </select>
        </div>
    </div>
</div>

