<div class="ml-2 md:ml-6 border-l-2 border-slate-200 pl-8 pb-4 relative">
    <div class="absolute -left-[9px] top-0 w-4 h-4 bg-indigo-600 rounded-full border-4 border-slate-50"></div>
    <h3 class="text-2xl font-black mb-8 text-slate-800">Semestre {{ ordre }}</h3>

    <div class="space-y-6">
        <div class="bg-white rounded-sm border border-slate-200 shadow-sm overflow-hidden">
            {% for ordUe, ue in semestre.ues %}
                {{ include('typeDiplome/licence/structure/v2/_structure_ue.html.twig', {
                    semestreOrdre:ordre,
                    enfant: false,
                    diffUe: diffSemestre != null ? diffSemestre.ues[ordUe] : null,
                }) }}
            {% endfor %}
        </div>
    </div>

    <div class="mt-6 flex justify-end">
        <div class="inline-flex items-center gap-5 px-5 py-2.5 bg-slate-800 text-white rounded-full shadow-lg text-[11px] font-bold ring-4 ring-slate-50">
            <span class="text-slate-400 uppercase tracking-widest text-[9px]">Total S{{ ordre }} :</span>
            {% if presentiel %}
                <span class="flex items-center gap-1.5"><span
                            class="w-1.5 h-1.5 rounded-full bg-blue-400"></span> {{ semestre.heuresEctsSemestre.sommeSemestreTotalPres }}h</span>
            {% endif %}
            {% if distanciel %}
                <span class="flex items-center gap-1.5"><span
                            class="w-1.5 h-1.5 rounded-full bg-orange-400"></span> {{ semestre.heuresEctsSemestre.sommeSemestreTotalDist }}h</span>
            {% endif %}
            <span class="pl-4 ml-4 border-l border-white/20 text-indigo-300">{{ semestre.heuresEctsSemestre.sommeSemestreEcts }} ECTS</span>
            <span class="text-white text-sm font-black">{{ semestre.heuresEctsSemestre.sommeSemestreTotalPresDist }}h</span>
        </div>
    </div>
</div>
