<div class="col-12">
    <dl>
        {% if formation.isHasParcours == false and formation.parcours|length == 1 %}
            <dt>Responsable de formation</dt>
            <dd>{{ parcours.formation.responsableMention != null ? parcours.formation.responsableMention.display : 'Non concerné' }}</dd>
            <dt>Co-responsable de formation</dt>
            <dd>{{ parcours.formation.coResponsable != null ? parcours.formation.coResponsable.display : 'Non concerné' }}</dd>
        {% else %}
            <dt>Responsable du parcours</dt>
            <dd>{{ parcours.respParcours != null ? parcours.respParcours.display : 'Non concerné' }}</dd>
            <dt>Email</dt>
            <dd>{{ parcours.respParcours != null ? parcours.respParcours.email : 'Non concerné' }}</dd>
            {% if parcours.coResponsable != null %}
                <dt>Co-responsable du parcours</dt>
                <dd>{{ parcours.coResponsable != null ? parcours.coResponsable.display : 'Non concerné' }}</dd>
                <dt>Email</dt>
                <dd>{{ parcours.coResponsable != null ? parcours.coResponsable.email : 'Non concerné' }}</dd>
            {% endif %}
        {% endif %}
        <dt>Coordonnées secrétariat</dt>
        <dd>{{ parcours.coordSecretariat|raw }}</dd>
    </dl>
</div>
