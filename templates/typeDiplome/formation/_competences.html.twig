<div class="row">
    {% if (print is defined and print == false) %}
        <div class="col-sm-12 text-end mb-2 pe-40px">
            <div class="btn-group">
                <button type="button"
                        class="btn btn-sm btn-outline-info btn-icon btn-icon-end w-100 w-sm-auto mx-2 dropdown-toggle mb-1"
                        data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="{{ iconDownload }}"></i> BCC
                </button>
                <div class="dropdown-menu" style="">
                    <a class="dropdown-item" href="{{ path('app_parcours_bcc', {parcours:parcours.id}) }}">
                        Voir en ligne
                    </a>
                    <a class="dropdown-item" href="{{ path('app_competence_export_bcc', {parcours:parcours.id}) }}">
                        Export des BCC (pdf)
                    </a>
                    <a class="dropdown-item" href="{{ path('app_competence_export_croise', {parcours:parcours.id}) }}">
                        Export du tableau croisé BCC/EC (pdf)
                    </a>
                    <a class="dropdown-item" href="{{ path('app_competence_export_croise_global', {parcours:parcours.id}) }}">
                        Export du tableau croisé BCC/EC, global (xlsx)
                    </a>
                </div>
            </div>
        </div>
    {% endif %}
    <div class="col-sm-12">
            {% for bc in parcours.blocCompetences %}
                <p class="flex items-center gap-2 text-indigo-500 font-black uppercase text-xs tracking-widest mt-1">
                    <span class="w-2 h-2 bg-indigo-500 rounded-full"></span> {{ bc.display }}</p>
                        {% for c in bc.competences %}
                            <p class="flex items-center gap-2 text-slate-600 text-xs tracking-widest"><span
                                        class="w-2 h-2 bg-emerald-500 rounded-full ms-2"></span>{{ c.display }}</p>
                        {% endfor %}
            {% endfor %}
    </div>
</div>
