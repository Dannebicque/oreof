<h2>Configuration du profil : "{{ profil.libelle }}" ({{ profil.code }})</h2>

<div>
    <label class="form-label required" for="selectListe">Choisir la composante pour ce profil</label>
    <select id="selectListe" class="form-select"
            required
            {{ stimulus_controller('symfony/ux-autocomplete/autocomplete') }}
    >
        {% for compo in composantes %}
            <option value="{{ compo.id }}">{{ compo.libelle }}</option>
        {% endfor %}
    </select>
</div>
