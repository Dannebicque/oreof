<h2>Configuration du profil : "{{ profil.libelle }}" ({{ profil.code }})</h2>

<div>
    <label class="form-label required" for="typeCentre">Choisir la formation pour ce profil</label>
    <select id="typeCentre" class="form-select"
            required
            {{ stimulus_controller('symfony/ux-autocomplete/autocomplete') }}
    >
        {% for formation in formations %}
            <option value="{{ formation.id }}">{{ formation.displayLong(true) }}</option>
        {% endfor %}
    </select>
</div>
