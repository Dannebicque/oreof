        {#                  placeholder="Détails du contenu de l'EC..."></textarea> #}

        {{ form_row(form.texteEcLibre) }}
    </div>

    <div data-ec--manage-target="natureSection" data-nature="nature_7" class="hidden space-y-6"
         data-controller="multi-tags">
        <div class="space-y-3">
            <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest italic"
                   for="matiere_choix"
            >
                Gestion des matières (EC de type Choix)
            </label>
            <div class="relative group">
                <div class="absolute inset-y-0 left-4 flex items-center pointer-events-none">
                    <svg class="w-4 h-4 text-slate-400 group-focus-within:text-indigo-500" fill="none"
                         stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                </div>
                <input type="text" data-multi-tags-target="input"
                       id="matiere_choix"
                       data-action="keydown.enter->multi-tags#addFromInput"
                       placeholder="Rechercher ou taper le nom d'une nouvelle matière..."
                       class="w-full pl-12 pr-4 py-4 bg-white border border-slate-200 rounded-2xl font-semibold shadow-sm focus:ring-4 focus:ring-indigo-50 focus:border-indigo-500 outline-none transition-all">
                <div class="absolute right-3 top-3">
                    <kbd
                            class="px-2 py-1 bg-slate-100 border border-slate-200 rounded-lg text-[10px] font-black text-slate-400 uppercase">Entrée</kbd>
                </div>
            </div>

            <div class="flex flex-wrap gap-2 pt-2">
                <p class="text-[9px] font-bold text-slate-400 uppercase w-full mb-1">Suggestions rapides :
                </p>
                <button type="button" data-action="multi-tags#add" data-label="Biochimie"
                        class="px-3 py-1.5 bg-slate-100 hover:bg-indigo-100 hover:text-indigo-700 rounded-xl text-xs font-bold text-slate-600 transition-colors">
                    +
                    Biochimie
                </button>
                <button type="button" data-action="multi-tags#add" data-label="Génétique"
                        class="px-3 py-1.5 bg-slate-100 hover:bg-indigo-100 hover:text-indigo-700 rounded-xl text-xs font-bold text-slate-600 transition-colors">
                    +
                    Génétique
                </button>
                <button type="button" data-action="multi-tags#add" data-label="Microbiologie"
                        class="px-3 py-1.5 bg-slate-100 hover:bg-indigo-100 hover:text-indigo-700 rounded-xl text-xs font-bold text-slate-600 transition-colors">
                    +
                    Microbiologie
                </button>
            </div>
        </div>

        <div class="p-6 bg-slate-50/50 border-2 border-dashed border-slate-200 rounded-[2rem] space-y-4">
            <div class="flex justify-between items-center">
                <p class="text-[10px] font-black text-slate-500 uppercase tracking-tighter">Matières
                    sélectionnées</p>
                <span data-multi-tags-target="count"
                      class="text-[10px] font-black text-indigo-600 bg-indigo-50 px-2 py-0.5 rounded-md">0</span>
            </div>

            <div data-multi-tags-target="list" class="flex flex-wrap gap-3">
                <p data-multi-tags-target="empty" class="text-xs text-slate-400 italic">Aucune matière
                    ajoutée pour le moment.</p>
            </div>
        </div>
    </div>

    <div data-ec--manage-target="natureSection" data-nature="nature_8" class="hidden field-group space-y-2">
        {{ form_row(form.ficheMatiere) }}
