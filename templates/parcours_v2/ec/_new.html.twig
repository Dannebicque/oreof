        {#            </label> #}
        {#            <button type="button" data-action="click->ec--manage#toggleNewField" #}
        {#                    class="text-[10px] font-black text-indigo-600 hover:underline">+ Créer nouvelle #}
        {#            </button> #}
        {#        </div> #}
        {#        <select #}
        {#                id="matiere_obligatoire" #}
        {#                class="select-field w-full p-4 bg-white border border-slate-200 rounded-2xl font-semibold shadow-sm focus:ring-4 focus:ring-indigo-50 outline-none"> #}
        {#            <option>Mathématiques appliquées</option> #}
        {#            <option>Anglais technique</option> #}
        {#        </select> #}
        {#        <input type="text" placeholder="Nom de la nouvelle matière..." #}
        {#               class="input-field hidden w-full p-4 bg-emerald-50 border border-emerald-200 rounded-2xl font-semibold outline-none"> #}
    </div>

    {{ form_end(form) }}
</div>
