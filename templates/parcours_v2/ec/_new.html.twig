>

    {% form_theme form 'communs/form_theme_v2.html.twig' %}
    {{ form_start(form, {
        'attr': {
            'id': 'modal_form'}
    }) }}

    {% if isAdmin %}
        <div class="grid grid-cols-3 gap-6">
            <div class="space-y-2">
                {{ form_row(form.ordre) }}
            </div>
            <div class="col-span-2 space-y-2">
                {{ form_row(form.code) }}
            </div>
        </div>
    {% endif %}

    {{ form_row(form.typeEc) }}

    {{ form_row(form.natureUeEc) }}

    <div data-ec--manage-target="natureSection" data-nature="nature_9" class="hidden space-y-2">
        {#        <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest" for="matiere_libre">Description #}
