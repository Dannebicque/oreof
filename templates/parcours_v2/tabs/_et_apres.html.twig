<turbo-frame id="tab-content">
    {{ include('parcours_v2/tabs/_header.html.twig', {tabKey: 'et_apres'}) }}

    <div class="flex-1 overflow-y-auto mt-4 custom-scrollbar">
        {% form_theme form 'communs/form_theme_v2.html.twig' %}
        {{ form_start(form, {
            attr: {
                id: 'tab_form_et_apres',
                'data-controller': 'autosave',
                'data-autosave-url-value': path('parcours_v2_tab_autosave', { id: parcours.id, tabKey: 'et_apres' }),
                'data-action': 'input->autosave#queue'

            }
        }) }}

        {{ form_errors(form) }}
        {{ form_widget(form) }}

        {# todo: revoir pour meilleure int√©gration visuelle (formtype?) #}
        <div {{ stimulus_controller('parcours--step6', {
            url: path('app_parcours_save', {parcours:parcours.id}),
            urlCodeRome: path('app_parcours_wizard_step_6_code_rome', {parcours:parcours.id}),
            urlCodeRomeGere: path('app_parcours_wizard_step_6_code_rome_gere', {parcours:parcours.id}),
        }) }}>
            <label class="col-form-label required">
                {{ 'parcours_step6.labels.codeRome'|trans({}, 'form') }}
            </label>
            <div {{ stimulus_target('parcours--step6', 'listeCodes') }}>

            </div>

        </div>


        {{ form_end(form) }}
    </div>

</turbo-frame>
