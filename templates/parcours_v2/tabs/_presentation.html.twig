<turbo-frame id="tab-content"
        {{ stimulus_controller('parcours--step1', {
            url: path('app_parcours_save', {parcours:parcours.id}),
        }) }}
>
    <header class="border-b border-slate-100 flex justify-between items-center bg-slate-50/50">
        <div>
            <h2 class="text-xl font-black text-slate-800 tracking-tight">{{ titre }}</h2>
            <p class="text-xs text-slate-400 font-bold uppercase mt-1">{{ texte_help }}</p>
        </div>
        <div class="flex gap-3">
            <div class="h-full flex items-center">
                <label for="etatStructure" class="inline-flex items-center gap-3 cursor-pointer select-none px-3 py-2 rounded-md shadow-sm
        {% if parcours.getEtatStep(1) %}bg-green-50 border border-green-200{% else %}bg-amber-50 border border-amber-200{% endif %}">
                    <input id="etatStructure"
                           type="checkbox"
                           class="sr-only peer"
                           {% if parcours.getEtatStep(1) %}checked{% endif %}
                            {{ stimulus_action('parcours--step1', 'etatStep', 'change') }}>
                    <span class="w-10 h-6 bg-slate-200 rounded-full relative transition-colors duration-200 peer-checked:bg-green-500">
                        <span class="absolute left-0.5 top-0.5 w-5 h-5 bg-white rounded-full shadow transform transition-transform duration-200 peer-checked:translate-x-4"></span>
                    </span>
                    <span class="text-sm font-medium text-slate-700">
                        Cochez cette case si vous avez termin√© ...
                    </span>
                </label>
            </div>
        </div>
    </header>

    <div class="flex-1 overflow-y-auto mt-4 custom-scrollbar">
        <div id="alertEtatStructure"></div>
        {% form_theme form 'communs/form_theme_v2.html.twig' %}
        {{ form(form) }}
    </div>

</turbo-frame>
