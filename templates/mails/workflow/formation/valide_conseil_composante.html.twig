{% extends 'mails/base_mail.html.twig' %}

{% block content %}
    <p>Bonjour,</p>

    <p>Le conseil de la composante <strong>{{ composante.libelle }}</strong> vient de valider
    {% if hasParcours == true %}
        le parcours <strong>{{ parcours.libelle }}</strong> de la formation <strong>{{ formation.displayLong }}</strong>
    {% else %}
        la formation <strong>{{ formation.displayLong }}</strong>
    {% endif %}
    </p>

    {% if historique != null %}
        {# tester si PV ou laisser passer et indiquer? #}
        {% if historique.complements.laisserPasser is defined %}
            <p><strong>Demande de laissez-passer.</strong></p>
        {% endif %}
        {% if historique.complements.fichier is defined %}
            <p><strong>Fichier de PV déposé.</strong></p>
        {% endif %}
    {% else %}
        Erreur d'historique...
    {% endif %}
{% endblock %}
