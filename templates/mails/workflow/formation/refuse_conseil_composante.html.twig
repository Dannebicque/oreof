{% extends 'mails/base_mail.html.twig' %}

{% block content %}
    <p>Bonjour {{ formation.responsableMention.display }}
        , {% if formation.coResponsable != null %}{{ formation.coResponsable.display }}, {% endif %}</p>

    {% if hasParcours == true %}
        <p>Le parcours <strong>{{ parcours.libelle }}</strong> de la formation <strong>{{ formation.displayLong }}</strong>, a été refusé par le
            conseil de votre composante.</p>
    {% else %}
        <p>La formation <strong>{{ formation.displayLong }}</strong>, a été refusée par le
            conseil de votre composante.</p>
    {% endif %}

    <p>Le motif est :</p>
    <p>{{ motif|nl2br|raw }}</p>
{% endblock %}
