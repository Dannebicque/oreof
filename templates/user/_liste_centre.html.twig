<table class="table table-striped">
    <thead>
    <tr>
        <th>Type de centre</th>
        <th>Centre</th>
        <th>Droits</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {% for userProfil in userProfils %}
        <tr>
            <td>{{ userProfil|badgeTypeCentre }}</td>
            <td>{{ userProfil|centre }}</td>
            <td>{{ userProfil.profil.libelle }}</td>
            <td><button {{ stimulus_action('centre', 'delete', 'click', {
                    url:path('app_user_gestion_delete_centre',{'id': userProfil.id}),
                    csrf: csrf_token('delete' ~ userProfil.id)
                }) }} class="btn btn-sm text-danger">
                    <i class="{{ iconDelete }}"></i> Supprimer
                </button></td>
        </tr>
        {% else %}
        <tr>
            <td colspan="4" class="bg-warning">Aucun centre</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
