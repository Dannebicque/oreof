            <label class="form-check-label" for="etat_{{ loop.index }}">{{ ('workflow.'~etat.label)|trans }}</label>
        </div>
    {% endfor %}
    <div class="mt-2">
        <button type="submit" class="btn btn-success"
                {{ stimulus_action('base','sauvegardeFormModal', 'click') }}
                data-action="live#emit"
                data-event="edit"
        >
            <i class="fal fa-floppy-disk"></i>
            Enregistrer
        </button>
    </div>
</form>
