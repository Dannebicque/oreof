<div class="card-body">
    <div class="alert alert-info">
        {% set nbDemandes = demandes|length %}
        <strong>{{ nbDemandes }}</strong> demande{{ nbDemandes > 1 ? 's' : '' }} de changement de RF/CoRf
        trouvée{{ nbDemandes > 1 ? 's' : '' }}.
    </div>
    <table class="table" {{ stimulus_controller('check_all') }}>
        <thead>
        <tr>
            <th>
                <div class="checkbox">
                    <label>
                        <input type="checkbox" id="check-all" {{ stimulus_action('check_all', 'checkAll') }}>
                        <span class="total"></span>
                    </label>
                </div>
            </th>
            <th>
                Formation
            </th>
            <th>
                Co/RF
            </th>
            <th>
                Actuel Co/RF
            </th>
            <th>
                Nouveau Co/RF
            </th>
            <th>
                Date demande
            </th>
            <th>
                Date Validation CFVU
            </th>
            <th>
                Etat
            </th>
            <th>
                PV ?
            </th>
            <th>
                Actions
            </th>
        </tr>
        </thead>
        <tbody>
        {% for demande in demandes %}
            <tr>
                <td>
                    <div class="checkbox">
                        <label>
                            <input
                                    {{ stimulus_action('check_all', 'check') }}
                                    type="checkbox"
                                    class="check-all"
                                    name="demandes[]"
                                    value="{{ demande.id }}"
                            >
                        </label>
                    </div>
                </td>
                <td>
                    {{ demande.formation.displayLong }}
                </td>
                <td>
                    {{ demande.typeRf.value }}
                </td>
                <td>
                    {{ demande.ancienResponsable != null ? demande.ancienResponsable.display : 'Non défini' }}
                </td>
                <td>
                    {{ demande.nouveauResponsable != null ? demande.nouveauResponsable.display : 'Non défini' }}
                </td>
                <td>
                    {{ demande.dateDemande|date('d/m/Y H:i') }}
                </td>
                <td>
                    {{ component('historique_date', {changeRf:demande, type:'change_rf', step:'soumis_cfvu'}) }}
                </td>
                <td>
                    {{ demande.etatDemande|badgeChangeRf }}
                </td>
                <td>
                    {{ component('historique_pv', {changeRf:demande, type:'change_rf'}) }}
                </td>
                <td>
                    <a href="{{ path('formation_v2_voir',{'slug': demande.formation.slug}) }}"
                       class="btn btn-sm text-info"
                       data-bs-toggle="tooltip"
                       data-bs-placement="bottom"
                       title="Voir la formation"
                       target="_blank"
                    >
                        <i class="{{ iconShow }}"></i>
                        <span> Voir</span>
                    </a>
                </td>
            </tr>
            <tr>
                <td colspan="3" class="text-end"> Commentaire :</td>
                <td colspan="6">
                    {{ demande.commentaire }}
                </td>
                <td>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">
                    <div class="alert alert-info">Aucune demande de changement de Co/RF dans cette état de demande</div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="row mt-2">
        {% set prefix = 'changeRf' %}
        {% if demandes|length > 0 %}
            {% set oneDemande = demandes|first %}

            {% for key, state in hasTransitions(oneDemande, 'changeRf') %}
                {% for keyTrans, transition in state %}
                    <div class="col-{{ 4 / state|length }} d-grid">
                        <button class="btn btn-sm d-block btn-outline-{{ transition.meta.btn }}"
                                type="button"
                                data-action="validation--index#{{ key }}"
                                data-validation--index-url-param="{{ path('app_validation_change_rf_lot', {etape:etape, transition:keyTrans, key:key}) }}"
                                data-controller="tooltip"
                                data-tooltip-placement-value="bottom"
                                aria-label="{{ ('title.validation.'~prefix~'.'~keyTrans)|trans({}, 'process') }}"
                                data-bs-original-title="{{ ('title.validation.'~prefix~'.'~keyTrans)|trans({}, 'process') }}"
                        >
                            <i class="fal {{ transition.meta.icon }}"></i> {{ ('btn.validation.'~prefix~'.'~keyTrans)|trans({}, 'process') }}
                        </button>
                    </div>
                {% else %}
                    <div class="col-2 d-grid">
                    </div>
                {% endfor %}
            {% else %}
                <div class="col-6 d-grid">
                    <button class="btn btn-sm btn-muted d-block">
                        {{ 'validation.formation.indisponible'|trans({}, 'process') }}
                    </button>
                </div>
            {% endfor %}
        {% endif %}
    </div>
    <div class="row mt-2" {{ stimulus_target('validation--index', 'action') }}>

