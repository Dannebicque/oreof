{% extends 'base.html.twig' %}

{% block content %}
    <div class="mt-3"
            {{ stimulus_controller('mutualise_wizard', {
                url: path('app_mutualise_index'),
                step: 1
            }) }}
    >

        <ul class="nav nav-tabs nav-tabs-title nav-tabs-line-title responsive-tabs" id="lineTitleTabsContainer" role="tablist">
            <li class="nav-item" role="presentation">
                <a class="nav-link active"
                   data-bs-toggle="tab" href="#" role="tab" aria-selected="true"
                        {{ stimulus_action('mutualise_wizard', 'changeStep', 'click', {step: 1}) }}
                >
                    Fiche EC/Matière
                </a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link" data-bs-toggle="tab" href="#" role="tab"
                        {{ stimulus_action('mutualise_wizard', 'changeStep', 'click', {step: 2}) }}
                   aria-selected="false">
                    UE
                </a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link" data-bs-toggle="tab" href="#"
                   role="tab" aria-selected="false"
                        {{ stimulus_action('mutualise_wizard', 'changeStep', 'click', {step: 3}) }}
                >
                    Semestre
                </a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link" data-bs-toggle="tab" href="#"
                   role="tab" aria-selected="false"
                        {{ stimulus_action('mutualise_wizard', 'changeStep', 'click', {step: 4}) }}
                >
                    BCC transversaux
                </a>
            </li>

            <!-- An empty list to put overflowed links -->
            <li class="nav-item dropdown ms-auto pe-0 d-none responsive-tab-dropdown">
                <a
                        class="btn btn-icon btn-icon-only btn-background pt-0 bg-transparent pe-0"
                        href="#"
                        data-bs-toggle="dropdown"
                        aria-haspopup="true"
                        aria-expanded="false"
                >
                    <i data-acorn-icon="more-horizontal"></i>
                </a>
                <ul class="dropdown-menu mt-2 dropdown-menu-end"></ul>
            </li>
        </ul>

        <div class="card mb-5">
            <div class="card-body">
                <div class="tab-content">
                    <div class="tab-pane fade active show" id="step_1" role="tabpanel" {{ stimulus_target
                        ('mutualise_wizard', 'content') }}>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

