{% extends 'base.html.twig' %}

{% block stylesheets %}
{{ parent() }}

<style>
a.fiche-matiere-search-link span {
    text-decoration: underline;
}
</style>
{% endblock %}

{% block content %}

<h1 class="small-title fs-3 mb-4">Résultats de la recherche</h1>

<p class="fs-3 text-dark text-center mt-5">
    {{ keyword_1 is not empty ? 'Mot-clé : ' ~ keyword_1 : 'Aucun mot-clé renseigné.' }}
</p>

<div class="row justify-content-center">
    <div class="col-8">
        {% if parcoursArray|length > 0 %}
                {% for p in parcoursArray %}
                    <div class="col-12 border border-primary rounded my-4">
                        <div class="row p-2 mt-1">
                            <div class="col-8">
                                <a 
                                    href="{{ path('app_parcours_show', {id: p.id}) }}"
                                    class="text-primary font-weight-bold"
                                >
                                    {{ p.libelle }}
                                </a>
                            </div>
                            <div class="col-4">
                                <span class="text-end">
                                    Sigle : {{ p.sigle }}
                                </span>
                            </div>
                        </div>
                        <div class="row p-2 mt-2">
                            <div>
                                {% if 'objectifsParcours' in resultArrayBadge[loop.index0] %}
                                    <span class="badge rounded-pill text-bg-success">
                                        Objectifs du parcours
                                    </span>
                                {% endif %}
                                {% if 'poursuitesEtudes' in resultArrayBadge[loop.index0] %}
                                    <span class="badge rounded-pill text-bg-warning">
                                        Poursuite d'études
                                    </span> 
                                {% endif %}
                                {% if 'contenuFormation' in resultArrayBadge[loop.index0] %}
                                    <span class="badge rounded-pill text-bg-primary">
                                        Contenu de la formation
                                    </span>
                                {% endif %}
                                {% if 'resultatsAttendus' in resultArrayBadge[loop.index0] %}
                                    <span class="badge rounded-pill text-bg-info">
                                        Résultats attendus
                                    </span>
                                {% endif %}
                            </div>
                        </div>
                        {% if resultArrayBadge[loop.index0]['fichesMatieres'] is defined 
                              and resultArrayBadge[loop.index0]['fichesMatieres']|length > 0
                        %}
                        {% set nbFichesMatieres = resultArrayBadge[loop.index0]['fichesMatieres']|length %}
                        <div class="col mb-2">
                            <a href="#" class="fiche-matiere-search-link" data-bs-toggle="modal" data-bs-target="#associatedFicheMatiereModal">
                                <span class="font-weight-bold ms-3 pb-2 text-dark">
                                    {{ 
                                        nbFichesMatieres > 1 
                                        ? nbFichesMatieres ~ ' fiches matières associées' 
                                        : nbFichesMatieres ~ ' fiche matière associée' }}
                                </span>
                            </a>
                        </div>
                        {% endif %}
                    </div>
                {% endfor %}
        {% else %}
            <h1 class="fs-4 mt-4 text-dark text-center">
                Aucun parcours trouvé pour le mot-clé fourni...
            </h1>
        {% endif %}
    </div>
</div>

<div class="modal" id="associatedFicheMatiereModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="titre-modale-recherche">
                    Fiches matières associées
                </h5>
            </div>
            <div class="modal-body" id="associated-fiche-matiere-modal-body">
                
            </div>
            <div class="modal-footer">
                <button type="button" data-bs-dismiss="modal" class="btn btn-primary">
                    Fermer
                </button>
            </div>
        </div>
    </div>
</div>


{% endblock %}

{% block javascripts %}
{{ parent() }}

<script src="{{ asset('search/search.js') }}"></script>

{% endblock %}