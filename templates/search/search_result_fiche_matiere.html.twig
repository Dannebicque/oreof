<div
    id="dataFicheMatiereSearch"
    data-nb-fiches-total="{{ nombreTotal }}"
    data-keyword="{{ keyword_1 }}"
    data-fetch-url="{{ path('app_search_fiche_matiere_pagination', {page: 1234567890, mot_cle: 'µ#+'}) }}"
    data-parcours-view-url="{{ path('app_parcours_show', {id: 'µ%$£'}) }}"
    data-fiche-matiere-view-url="{{ path('app_fiche_matiere_show', {slug: 'µ%$£'}) }}"
    class="d-none">
</div>
{% if nombreTotal > 30 %}
    <div class="row justify-content-center">
        <div class="d-flex col-3 col-md-2 col-xl-1 justify-content-center">
            <i class="button-page button-page-left fa-sharp-duotone fa-solid fa-arrow-left fs-2"></i>
        </div>
        <div class="col-4 col-md-3 col-lg-2 col-xl-1 numero-page">
            Page 1 / {{ ((nombreTotal / 30)|round(0, 'floor')) + 1 }}
        </div>
        <div class="d-flex col-3 col-md-2 col-xl-1 justify-content-center">
            <i class="button-page button-page-right fa-sharp-duotone fa-solid fa-arrow-right fs-2"></i>
        </div>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-6 col-md-4 col-lg-3 col-xl-2">
            <input type="number" class="form-control" placeholder="Numéro de page...">
        </div>
        <div class="d-flex col-4 col-md-3 col-lg-2 col-xl-1 align-items-end">
            <button class="btn btn-sm btn-primary">
                OK
            </button>
        </div>
    </div>
{% endif %}
{% if nombreTotal > 1 %}
<div class="row justify-content-center">
    <div class="col-6 col-md-4 col-lg-3 col-xl-2 text-center my-5">
        <a href="{{ path('app_search_fiche_matiere_export_excel', {mot_cle: keyword_1}) }}">
            <button class="btn btn-sm btn-primary">
                Télécharger les résultats
            </button>
        </a>
    </div>
</div>
<div class="row justify-content-center">
    <div class="col-12 text-center loading-icon">
        <!-- Loading Icon -->
    </div>
    <div class="col-10 col-md-8 col-lg-6 rootNodeForFicheMatiereList">
    
    </div>
</div>
{% endif %}