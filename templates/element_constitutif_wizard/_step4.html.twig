<h2>Structure et Organisation pédagogique</h2>
{% if is_granted('ROLE_RESP_FORMATION') %}
    <div {{ stimulus_controller('ec--step3', {
        url: path('app_ec_save', {ec:ec.id}),
    }) }}>
        {% form_theme form 'communs/form_theme.html.twig' %}
        {{ form(form) }}
    </div>
{% else %}
    <div>
        <p>
            <strong>Modalités d’enseignement</strong> : {{ ec.modaliteEnseignement != null ? ec.modaliteEnseignement
            .libelle : 'Non défini' }}
        </p>

        <p>
            <strong>Nombre d'ECTS</strong> : {{ ec.ects }}
        </p>

        <p>
            <strong>Volume horaire en présentiel</strong>
            <ul>
                <li>Nombre d’heures. CM : {{ ec.volumeCmPresentiel }}</li>
                <li>Nombre d’heures. TD : {{ ec.volumeTdPresentiel }}</li>
                <li>Nombre d’heures. TP : {{ ec.volumeTpPresentiel }}</li>
            </ul>
        </p>

        <p>
            <strong>Volume horaire en distanciel</strong>
            <ul>
                <li>Nombre d’heures. CM : {{ ec.volumeCmDistanciel }}</li>
                <li>Nombre d’heures. TD : {{ ec.volumeTdDistanciel }}</li>
                <li>Nombre d’heures. TP : {{ ec.volumeTpDistanciel }}</li>
            </ul>
        </p>
    </div>
{% endif %}
