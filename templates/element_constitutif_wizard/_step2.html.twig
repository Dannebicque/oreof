<h2>Pr√©sentation</h2>
<div {{ stimulus_controller('ec--step2', {
    url: path('app_ec_save', {ec:ec.id}),
}) }}>
    {% form_theme form 'communs/form_theme.html.twig' %}
    {{ form_start(form) }}
    {{ form_row(form.description) }}
    <div class="row">
        <div class="col-6">
            {{ form_row(form.langueDispense) }}
            <a
                    href="#"
                    {{ stimulus_controller('modal', {
                        size: 'lg',
                        modalTitle: 'Ajouter une langue',
                        nomEvenement: 'refreshStep',
                        modalUrl: path('app_langue_new') }) }}
                    data-action="click->modal#openModal"
                    data-size="lg"
                    data-bs-toggle="tooltip"
                    data-bs-placement="bottom"
                    title="Ajouter une langue"
            >
                <i class="{{ iconAdd }}"></i>
                <span> Ajouter une langue manquante</span>
            </a>
        </div>
        <div class="col-6">
            {{ form_row(form.langueSupport) }}
            <a
                    href="#"
                    {{ stimulus_controller('modal', {
                        size: 'lg',
                        modalTitle: 'Ajouter une langue',
                        nomEvenement: 'refreshStep',
                        modalUrl: path('app_langue_new') }) }}
                    data-action="click->modal#openModal"
                    data-size="lg"
                    data-bs-toggle="tooltip"
                    data-bs-placement="bottom"
                    title="Ajouter une langue"
            >
                <i class="{{ iconAdd }}"></i>
                <span> Ajouter une langue manquante</span>
            </a>
        </div>
    </div>



    {{ form_row(form.typeEnseignement) }}
    {{ form_end(form) }}
</div>
