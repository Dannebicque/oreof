<h2>Modalités de contrôle des connaissances</h2>
<div {{ stimulus_controller('ec--step5', {
    url: path('app_ec_save', {ec:ec.id}),
}) }}
>
    {% if editable %}
        {{ include('components/TypeDiplome/mccc/'~templateForm) }}

        <div class="alert {% if ec.getEtatStep(5) %}alert-success{% else %}alert-warning{% endif %}">
            <input type="checkbox"
                   id="etatStructure"
                   class="form-check-inline"
                   {% if ec.getEtatStep(5) %}checked{% endif %}
                    {{ stimulus_action('ec--step5', 'etatStep', 'change') }}

            ><label for="etatStructure">
                Cochez cette case si vous avez terminé ...</label>
        </div>
    {% else %}
        {{ include('components/TypeDiplome/mccc-non-editable/'~templateForm) }}
    {% endif %}
</div>
