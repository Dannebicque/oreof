{% extends 'base.html.twig' %}

{% block content %}
    <div class="mt-3"
            {{ stimulus_controller('parcours_wizard', {
                url: path('app_parcours_wizard'),
                step: 'step_1',
                parcours: parcours.id,
            }) }}
    >

        <ul class="nav nav-tabs nav-tabs-title nav-tabs-line-title responsive-tabs" id="lineTitleTabsContainer" role="tablist">
            <li class="nav-item" role="presentation">
                <a class="nav-link active" data-bs-toggle="tab" href="#" role="tab" aria-selected="true"
                        {{ stimulus_action('parcours_wizard', 'changeStep', 'click', {step: 1}) }}
                >
                    Présentation du parcours
                </a>
            </li>

            <li class="nav-item" role="presentation">
                <a class="nav-link" data-bs-toggle="tab" href="#" role="tab" aria-selected="false"
                        {{ stimulus_action('parcours_wizard', 'changeStep', 'click', {step: 2}) }}
                >
                    Descriptif du parcours
                </a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link" data-bs-toggle="tab" href="#" role="tab" aria-selected="false"
                        {{ stimulus_action('parcours_wizard', 'changeStep', 'click', {step: 3}) }}
                >
                    Compétences du parcours
                </a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link" data-bs-toggle="tab" href="#" role="tab" aria-selected="false"
                        {{ stimulus_action('parcours_wizard', 'changeStep', 'click', {step: 4}) }}
                >
                    Structure de la maquette
                </a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link" data-bs-toggle="tab" href="#" role="tab" aria-selected="false"
                        {{ stimulus_action('parcours_wizard', 'changeStep', 'click', {step: 5}) }}
                >
                    Admission et inscription
                </a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link" data-bs-toggle="tab" href="#" role="tab" aria-selected="false"
                        {{ stimulus_action('parcours_wizard', 'changeStep', 'click', {step: 6}) }}
                >
                    Et après...
                </a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link" data-bs-toggle="tab" href="#" role="tab" aria-selected="false"
                        {{ stimulus_action('parcours_wizard', 'changeStep', 'click', {step: 7}) }}
                >
                    Contacts pédagogiques
                </a>
            </li>

            <!-- An empty list to put overflowed links -->
            <li class="nav-item dropdown ms-auto pe-0 d-none responsive-tab-dropdown">
                <a
                        class="btn btn-icon btn-icon-only btn-background pt-0 bg-transparent pe-0"
                        href="#"
                        data-bs-toggle="dropdown"
                        aria-haspopup="true"
                        aria-expanded="false"
                >
                    <i data-acorn-icon="more-horizontal"></i>
                </a>
                <ul class="dropdown-menu mt-2 dropdown-menu-end"></ul>
            </li>
        </ul>

        <div class="card mb-5">
            <div class="card-body">
                <div class="tab-content">
                    <div class="tab-pane fade active show" id="step_1" role="tabpanel" {{ stimulus_target
                        ('parcours_wizard', 'content') }}>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block header %}
    Gestion du parcours <strong>{{ parcours.libelle }}</strong>
{% endblock %}

{% block breadcrumb %}
    {{ include('communs/_breadcrumb.html.twig', {liens:[
        {href: path('app_formation_index'), title: 'Liste des formations'},
        {href: path('app_formation_edit', {id:formation.id}), title: 'Formation : '~formation.display},
    ]}) }}
{% endblock %}

