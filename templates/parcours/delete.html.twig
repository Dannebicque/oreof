{% extends 'base.html.twig' %}

{% block content %}
    <div class="card my-4">
        <div class="card-body">
            <div class="d-flex align-items-start gap-3">
                <div class="text-danger fs-3">
                    <i class="fas fa-exclamation-triangle" aria-hidden="true"></i>
                </div>
                <div>
                    <h4 class="card-title mb-1">Suppression définitive</h4>
                    <p class="mb-2">Vous souhaitez supprimer le parcours : <strong>{{ parcours.display }}</strong> de la
                        formation : <strong>{{ formation.displayLong }}</strong>.</p>
                    <p class="text-danger mb-0">Cette suppression est définitive. Vous trouverez ci-dessous les détails
                        du parcours et ses liens. Confirmez ou annulez en bas de page.</p>
                </div>
            </div>

            {# Nouveau : calculer le nombre d'éléments liés (semestres partagés + UEs référencées) #}
            {% set sem_shared_count = 0 %}
            {% set ue_shared_count = 0 %}
            {% set fiche_shared_count = 0 %}
            {% set ec_utilise = 0 %}
            {% for semestre in parcours.semestreParcours %}
                {% set sem_shared_count = sem_shared_count + (semestre.semestre.semestreMutualisables|length) %}
                {% for ueParcours in semestre.semestre.ues %}
                    {% set ue_shared_count = ue_shared_count + (ueParcours.ueMutualisables|length) %}
                {% endfor %}
            {% endfor %}

            {% for fiche in parcours.ficheMatieres %}
                {% if fiche.ficheMatiereParcours|length > 0 %}
                    {% set fiche_shared_count = fiche_shared_count + 1 %}
                    {% for ec in fiche.elementConstitutifs|filter(ec => ec.parcours.id != parcours.id) %}
                        {% set ec_utilise = ec_utilise + 1 %}
                    {% endfor %}
                {% endif %}
            {% endfor %}

            {% set total_links = sem_shared_count + ue_shared_count + ec_utilise %}

            {# Message à l'utilisateur selon la présence de liens #}
            {% if total_links > 0 %}
                {{ include('parcours/_delete_detail.html.twig') }}
            {% else %}
                <div class="alert alert-success mt-3">
                    Aucun élément lié détecté — la suppression est possible.
                </div>
            {% endif %}
        </div>

        <div class="card-body border-top">
            <section class="mb-3">
                <h5 class="mb-2">Résumé</h5>
                <div class="row">
                    <div class="col-sm-3">
                        <div class="small text-muted">Semestres</div>
                        <div>{{ parcours.semestreParcours|length }}</div>
                    </div>
                    <div class="col-sm-3">
                        <div class="small text-muted">UEs (potentielles)</div>
                        <div>
                            {# compter les UEs qui ont des mutualisables #}
                            {% set ue_count = 0 %}
                            {% for semestre in parcours.semestreParcours %}
                                {% for ueParcours in semestre.semestre.ues %}
                                    {% if ueParcours.ueMutualisables|length > 0 %}
                                        {% set ue_count = ue_count + 1 %}
                                    {% endif %}
                                {% endfor %}
                            {% endfor %}
                            {{ ue_count }}
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="small text-muted">Fiches matières</div>
                        <div>
                            {{ fiche_shared_count }}
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="small text-muted">Alertes</div>
                        <div><span class="badge bg-danger">Vérifier les liens partagés</span></div>
                    </div>
                </div>
            </section>

            <section class="mb-3">
                <h5 class="mb-2">Semestres du parcours mutualisés</h5>

                {% for semestre in parcours.semestreParcours %}
                    {% set shared = semestre.semestre.semestreMutualisables|length %}
                    {% if shared > 0 %}
                        <details class="mb-2">
                            <summary class="fw-semibold">
                                Semestre {{ semestre.semestre.display }} — partagé avec {{ shared }} parcours
                            </summary>
                            <ul class="list-group list-group-flush mt-2">
                                {% for semestreMutualisable in semestre.semestre.semestreMutualisables %}
                                    <li class="list-group-item d-flex justify-content-between align-items-start">
                                        <div>
                                            {{ semestreMutualisable.parcours.display }}
                                            <div class="small text-muted">Parcours lié</div>
                                        </div>
                                        <div class="text-end">
                                            {% set used = false %}
                                            {% for semP in semestreMutualisable.parcours.semestreParcours %}
                                                {% if semP.semestre.semestreRaccroche != null and semP.semestre.semestreRaccroche.id == semestreMutualisable.id %}
                                                    {% set used = true %}
                                                {% endif %}
                                            {% endfor %}
                                            {% if used %}
                                                <span class="badge bg-danger">Utilisé</span>
                                            {% else %}
                                                <span class="badge bg-secondary">Référencé</span>
                                            {% endif %}
                                        </div>
                                    </li>
                                {% endfor %}
                            </ul>
                        </details>
                    {% endif %}
                {% endfor %}
            </section>

            <section class="mb-3">
                <h5 class="mb-2">UE du parcours mutualisées</h5>

                {% for semestre in parcours.semestreParcours %}
                    {% for ueParcours in semestre.semestre.ues %}
                        {% if ueParcours.ueMutualisables|length > 0 %}
                            <details class="mb-2">
                                <summary class="fw-semibold">
                                    UE {{ ueParcours.display }} — semestre {{ semestre.semestre.display }}
                                </summary>
                                <ul class="list-group list-group-flush mt-2">
                                    {% for ueMutualisable in ueParcours.ueMutualisables %}
                                        <li class="list-group-item d-flex justify-content-between align-items-start">
                                            <div>
                                                {{ ueMutualisable.parcours.display }}
                                                <div class="small text-muted">Parcours lié</div>
                                            </div>
                                            <div class="text-end">
                                                {% set used = false %}
                                                {% for ueP in ueMutualisable.parcours.semestreParcours %}
                                                    {% for ueParc in ueP.semestre.ues %}
                                                        {% if ueParc.ueRaccrochee != null and ueParc.ueRaccrochee.id == ueMutualisable.id %}
                                                            {% set used = true %}
                                                        {% endif %}
                                                    {% endfor %}
                                                {% endfor %}
                                                {% if used %}
                                                    <span class="badge bg-danger">Utilisée</span>
                                                {% else %}
                                                    <span class="badge bg-secondary">Référencée</span>
                                                {% endif %}
                                            </div>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </details>
                        {% endif %}
                    {% endfor %}
                {% endfor %}
            </section>

            <section class="mb-3">
                <h5 class="mb-2">Fiches matières du parcours mutualisées</h5>
                {% for fiche in parcours.ficheMatieres %}
                    {% if fiche.ficheMatiereParcours|length > 0 %}
                        <details class="mb-2">
                            <summary class="fw-semibold">
                                Fiche matière : {{ fiche.display }}
                            </summary>
                            <ul class="list-group list-group-flush mt-2">
                                {% for ec in fiche.elementConstitutifs|filter(ec => ec.parcours.id != parcours.id) %}
                                    <li class="list-group-item d-flex justify-content-between align-items-start">
                                        <div>
                                            {{ ec.parcours.display }}
                                            <div class="small text-muted">Parcours lié</div>
                                        </div>
                                        <div class="text-end">
                                            <span class="badge bg-danger">Utilisée</span>
                                        </div>
                                    </li>
                                {% else %}
                                    <li class="list-group-item d-flex justify-content-between align-items-start">
                                        <div>
                                            Pas d'EC trouvé.
                                        </div>
                                        <div class="text-end">
                                            <span class="badge bg-success">Non utilisée</span>
                                        </div>
                                    </li>
                                {% endfor %}
                            </ul>
                        </details>
                    {% endif %}
                {% endfor %}
            </section>

            {% if total_links > 0 %}
                {{ include('parcours/_delete_detail.html.twig') }}
            {% else %}
                <div class="alert alert-success mt-3">
                    Aucun élément lié détecté — la suppression est possible.
                </div>
            {% endif %}
        </div>


        <div class="card-footer d-flex justify-content-between align-items-center">
            <div class="small text-danger">Cette action est irréversible.</div>
            <div {{ stimulus_controller('modal_confirm', {
                titre: 'Confirmer la suppression du parcours',
                body: 'Êtes-vous sûr de vouloir supprimer définitivement le parcours <strong>'~ parcours.display ~'</strong> ? Cette action est irréversible.',
                btnAnnuler: 'Annuler',
            }) }}>

                <a href="{{ path('app_parcours_show', {id: parcours.id}) }}" class="btn btn-outline-secondary me-2">Annuler</a>

                <a
                        class="btn btn-danger"
                        {{ stimulus_action('modal_confirm', 'confirm') }}
                        href="{{ path('app_parcours_delete_confirm', {id:parcours.id}) }}"
                        data-bs-toggle="tooltip"
                        data-bs-placement="bottom"
                        title="Supprimer du parcours {{ parcours.libelle }}"
                >
                    <i class="{{ iconDelete }}"></i> Supprimer le parcours définitivement
                </a>
            </div>
        </div>
    </div>
{% endblock %}

{% block bouton_header %}
    <a href="{{ path('app_parcours_show', {id:parcours.id}) }}"
       class="btn btn-outline-primary"
    >
        <i class="{{ iconBack }}"></i> Retour
    </a>
{% endblock %}

{% set header_title %}
    Suppression du parcours : {{ parcours.display }}
{% endset %}
