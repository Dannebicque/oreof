<header class="border-b border-slate-100 flex justify-between items-center bg-slate-50/50 mb-2">
    <div>
        <h2 class="text-xl font-black text-slate-800 tracking-tight">{{ ('titre.formation.'~tabKey~'.header')|trans({}, 'header') }}</h2>
        <p class="text-xs text-slate-400 font-bold uppercase mt-1">{{ ('texte_help.formation.'~tabKey~'.header')|trans({}, 'header') }}</p>
    </div>
    <div class="flex gap-3 min-w-[20rem]">
        <div class="h-full flex items-center flex-1">
            <div id="tab_done_block_{{ tabKey }}" class="w-full">
                {{ include('formation_v2/tabs/_done_block.html.twig', {
                    formation: formation,
                    tabKey: tabKey,
                    status: tabStates[tabKey].status ?? 'red',
                    done: tabStates[tabKey].done ?? false
                }) }}
            </div>
        </div>
    </div>
</header>

<div id="tab_issues_{{ tabKey }}" data-controller="issues">
    {{ include('communs/_issues.html.twig', { issues: issues ?? [] }) }}
</div>
