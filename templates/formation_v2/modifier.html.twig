                    {#                        <a class="w-full flex items-center gap-3 p-3 rounded-2xl text-sm font-bold text-slate-400 hover:text-slate-800 transition" #}
                    {#                           href="{{ path('parcours_v2_tabs', { parcours: parcours.id, tab: 'configuration' }) }}" #}
                    {#                           data-turbo-frame="tab-content" #}
                    {#                           data-turbo-action="advance" #}
