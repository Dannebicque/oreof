{% set color = color is defined ? color : 'indigo' %}

<div class="flex items-center gap-4 mb-8 border-b border-slate-50 pb-6">
    <div class="w-12 h-12 bg-{{ color }}-600 rounded-2xl flex items-center justify-center text-white shadow-lg shadow-{{ color }}-100">
        <i class="{{ icon }} fa-lg"></i>
    </div>
    <h3 class="text-2xl font-black text-slate-800 tracking-tight italic uppercase">{{ title }}</h3>
</div>
